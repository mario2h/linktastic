<div class="container">
  <div class="row">
    <div class="col-lg-4 col-lg-offset-4">
      <h2>Ingresar</h2>
      <hr>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true , class: "form-control input-lg"%>
        </div>

        <div class="form-group">
          <%= f.label :password, "Contraseña" %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Recuérdame" %>
          </div>
        <% end -%>

        <div class="form-group">
          <%= f.submit "Ingresar", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
      <hr>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
