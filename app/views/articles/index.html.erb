<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1>
          <span class="article-list-title">Artículos</span>
          <div class="badge">
            <%= @articles.count %>
          </div>
        </h1>
      </div>
      <% if @articles.count == 0 %>
        <div class="no-article text-center text-muted">
          <h2>No hay artículos publicados.</h2>
          <%= fa_icon "frown-o 4x" %>
        </div>
      <% else %>
        <table class="table table-striped table-hover table-condensed table-responsive">
          <tbody>
            <% @articles.each do |article| %>
              <%= render "articles/partials/table_row", article: article %>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
