<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <p id="notice"><%= notice %></p>
      <div class="page-header">
        <% if user_signed_in? %>
          <%= link_to(fa_icon('plus', text: 'Nuevo artículo'), new_article_path, class: 'btn btn-primary pull-right') %>
        <% end %>
        <h2>Lista de Artículos</h2>
      </div>
      <table class="table table-striped table-hover table-condensed table-responsive">
        <thead>
          <tr>
            <th>Título</th>
            <th>URL</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
            <tr>
              <td><%= article.title %></td>
              <td><%= article.url %></td>
              <td><%= link_to 'Ver', article %></td>
              <% if user_signed_in? && article.user == current_user %>
                <td><%= link_to 'Editar', edit_article_path(article) %></td>
                <td><%= link_to 'Eliminar', article, method: :delete, data: { confirm: '¿Estas seguro?' } %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
